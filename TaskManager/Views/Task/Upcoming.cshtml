@model IEnumerable<TaskManager.ViewModels.TaskViewModel>

@{
    ViewData["Title"] = "Upcoming Tasks";
}

<div class="row mb-4">
    <div class="col-md-8">
        <h2>
            <i class="bi bi-calendar-check me-2"></i>Upcoming Tasks
        </h2>
        <p class="text-muted">Tasks due in the next 14 days - Focus on what's coming up</p>
    </div>
    <div class="col-md-4 text-end">
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle me-2"></i>Create New Task
        </a>
    </div>
</div>

@if (Model.Any())
{
    <!-- Task Count Summary -->
    <div class="alert alert-info mb-4">
        <i class="bi bi-info-circle me-2"></i>
        You have <strong>@Model.Count()</strong> upcoming task@(Model.Count() > 1 ? "s" : "") in the next 2 weeks
    </div>

    <!-- Simple Task List -->
    <div class="row row-cols-1 g-3">
        @foreach (var task in Model.OrderBy(t => t.Deadline))
        {
            var daysUntil = task.DaysUntilDeadline;
            var urgencyClass = daysUntil == 0 ? "border-warning" : daysUntil <= 3 ? "border-info" : "border-light";
            
            <div class="col">
                <div class="card @urgencyClass shadow-sm h-100">
                    <div class="card-body">
                        <div class="row align-items-center">
                            <!-- Task Info -->
                            <div class="col-md-7">
                                <h5 class="card-title mb-2">
                                    <a asp-action="Details" asp-route-id="@task.Id" class="text-decoration-none text-dark">
                                        @task.Title
                                    </a>
                                </h5>
                                
                                @if (!string.IsNullOrEmpty(task.Description))
                                {
                                    <p class="card-text text-muted small mb-2">
                                        @(task.Description.Length > 120 
                                            ? task.Description.Substring(0, 120) + "..." 
                                            : task.Description)
                                    </p>
                                }

                                <div class="d-flex gap-2 flex-wrap">
                                    <span class="@task.PriorityBadgeClass">
                                        <i class="bi bi-flag-fill me-1"></i>@task.PriorityText
                                    </span>
                                    <span class="@task.StatusBadgeClass">
                                        @task.StatusText
                                    </span>
                                    <span class="badge bg-light text-dark">
                                        <i class="bi bi-tag me-1"></i>@task.CategoryName
                                    </span>
                                </div>
                            </div>

                            <!-- Deadline Info -->
                            <div class="col-md-3 text-center">
                                <div class="deadline-box p-3 @(daysUntil == 0 ? "bg-warning bg-opacity-10" : daysUntil <= 3 ? "bg-info bg-opacity-10" : "bg-light")">
                                    <div class="mb-1">
                                        <i class="bi bi-calendar-event @(daysUntil == 0 ? "text-warning" : daysUntil <= 3 ? "text-info" : "text-muted")" style="font-size: 1.5rem;"></i>
                                    </div>
                                    <div class="fw-bold @(daysUntil == 0 ? "text-warning" : daysUntil <= 3 ? "text-info" : "")">
                                        @if (daysUntil == 0)
                                        {
                                            <span>Due Today!</span>
                                        }
                                        else if (daysUntil == 1)
                                        {
                                            <span>Tomorrow</span>
                                        }
                                        else
                                        {
                                            <span>In @daysUntil days</span>
                                        }
                                    </div>
                                    <small class="text-muted d-block">
                                        @task.Deadline.ToString("MMM dd, yyyy")
                                    </small>
                                </div>
                            </div>

                            <!-- Actions -->
                            <div class="col-md-2 text-end">
                                <div class="d-grid gap-2">
                                    <a asp-action="Details" asp-route-id="@task.Id" class="btn btn-sm btn-outline-primary">
                                        <i class="bi bi-eye"></i> View
                                    </a>
                                    @if (task.Status != TaskManager.DataAccess.Enums.TaskStatus.Completed)
                                    {
                                        <form asp-action="MarkAsCompleted" asp-route-id="@task.Id" method="post" class="d-inline">
                                            <button type="submit" class="btn btn-sm btn-success w-100">
                                                <i class="bi bi-check-circle"></i> Complete
                                            </button>
                                        </form>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <!-- Empty State -->
    <div class="card">
        <div class="card-body text-center py-5">
            <i class="bi bi-calendar-check text-muted" style="font-size: 4rem;"></i>
            <h4 class="mt-3">No Upcoming Tasks</h4>
            <p class="text-muted">You don't have any tasks due in the next 14 days. Great job staying on top of things!</p>
            <a asp-action="Create" class="btn btn-primary mt-3">
                <i class="bi bi-plus-circle me-2"></i>Create a New Task
            </a>
        </div>
    </div>
}

@section Styles {
<style>
    .deadline-box {
        border-radius: 0.5rem;
        transition: all 0.2s ease;
    }
    
    .card {
        transition: transform 0.2s ease, box-shadow 0.2s ease;
    }
    
    .card:hover {
        transform: translateY(-2px);
        box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15) !important;
    }

    .card-title a:hover {
        color: #0d6efd !important;
    }
</style>
}
