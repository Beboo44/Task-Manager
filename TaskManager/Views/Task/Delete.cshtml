@model TaskManager.ViewModels.TaskViewModel

@{
    ViewData["Title"] = "Delete Task";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card border-danger">
            <div class="card-header bg-danger text-white">
                <h4 class="mb-0">
                    <i class="bi bi-exclamation-triangle me-2"></i>Delete Task
                </h4>
            </div>
            <div class="card-body">
                <div class="alert alert-warning">
                    <i class="bi bi-exclamation-triangle me-2"></i>
                    Are you sure you want to delete this task? This action cannot be undone.
                </div>

                <h5>@Model.Title</h5>
                
                @if (!string.IsNullOrEmpty(Model.Description))
                {
                    <p class="text-muted">@Model.Description</p>
                }

                <div class="row mb-3">
                    <div class="col-md-6">
                        <strong>Priority:</strong>
                        <span class="@Model.PriorityBadgeClass ms-2">@Model.PriorityText</span>
                    </div>
                    <div class="col-md-6">
                        <strong>Status:</strong>
                        <span class="@Model.StatusBadgeClass ms-2">@Model.StatusText</span>
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-6">
                        <strong>Category:</strong> @Model.CategoryName
                    </div>
                    <div class="col-md-6">
                        <strong>Deadline:</strong> @Model.Deadline.ToString("MMM dd, yyyy HH:mm")
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-12">
                        <strong>Created:</strong> @Model.CreatedAt.ToString("MMM dd, yyyy HH:mm")
                    </div>
                </div>

                <form asp-action="Delete" method="post">
                    <input type="hidden" asp-for="Id" />
                    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="bi bi-x-circle me-2"></i>Cancel
                        </a>
                        <button type="submit" class="btn btn-danger">
                            <i class="bi bi-trash me-2"></i>Delete Task
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
