@{
    ViewData["Title"] = "Access Denied";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow-sm mt-5">
            <div class="card-body text-center p-5">
                <div class="mb-4">
                    <i class="bi bi-exclamation-triangle-fill text-warning" style="font-size: 4rem;"></i>
                </div>
                
                <h2 class="card-title mb-3">Access Denied</h2>
                
                <p class="text-muted mb-4">
                    You do not have permission to access this resource.
                </p>

                <div class="d-grid gap-2 d-md-flex justify-content-md-center">
                    <a asp-action="Index" asp-controller="Dashboard" class="btn btn-primary">
                        <i class="bi bi-house-door me-2"></i>Go to Dashboard
                    </a>
                    <a asp-action="Index" asp-controller="Home" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left me-2"></i>Go to Home
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
