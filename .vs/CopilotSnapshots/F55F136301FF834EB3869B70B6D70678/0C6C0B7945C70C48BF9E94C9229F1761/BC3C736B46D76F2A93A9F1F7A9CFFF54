@model TaskManager.ViewModels.TaskViewModel

@{
    ViewData["Title"] = "Task Details";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                <h4 class="mb-0">
                    <i class="bi bi-info-circle me-2"></i>Task Details
                </h4>
                <div>
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-sm btn-light">
                        <i class="bi bi-pencil"></i> Edit
                    </a>
                </div>
            </div>
            <div class="card-body">
                <h3>@Model.Title</h3>
                
                <div class="mb-3">
                    <span class="@Model.PriorityBadgeClass me-2">@Model.PriorityText Priority</span>
                    <span class="@Model.StatusBadgeClass">@Model.StatusText</span>
                </div>

                @if (!string.IsNullOrEmpty(Model.Description))
                {
                    <div class="mb-4">
                        <h6>Description:</h6>
                        <p class="text-muted">@Model.Description</p>
                    </div>
                }

                <div class="row mb-3">
                    <div class="col-md-6">
                        <div class="card bg-light">
                            <div class="card-body">
                                <h6 class="card-subtitle mb-2 text-muted">
                                    <i class="bi bi-tag me-1"></i>Category
                                </h6>
                                <p class="card-text">@Model.CategoryName</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="card bg-light">
                            <div class="card-body">
                                <h6 class="card-subtitle mb-2 text-muted">
                                    <i class="bi bi-calendar-event me-1"></i>Deadline
                                </h6>
                                <p class="card-text">
                                    @Model.Deadline.ToString("MMM dd, yyyy HH:mm")
                                    @if (Model.IsOverdue)
                                    {
                                        <br /><span class="text-danger fw-bold">
                                            <i class="bi bi-exclamation-triangle"></i> Overdue by @Math.Abs(Model.DaysUntilDeadline) days
                                        </span>
                                    }
                                    else if (Model.DaysUntilDeadline == 0)
                                    {
                                        <br /><span class="text-warning fw-bold">
                                            <i class="bi bi-clock"></i> Due today
                                        </span>
                                    }
                                    else
                                    {
                                        <br /><span class="text-muted">Due in @Model.DaysUntilDeadline days</span>
                                    }
                                </p>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-4">
                        <small class="text-muted">
                            <i class="bi bi-clock-history me-1"></i>Created:<br />
                            @Model.CreatedAt.ToString("MMM dd, yyyy HH:mm")
                        </small>
                    </div>
                    @if (Model.UpdatedAt.HasValue)
                    {
                        <div class="col-md-4">
                            <small class="text-muted">
                                <i class="bi bi-pencil-square me-1"></i>Updated:<br />
                                @Model.UpdatedAt.Value.ToString("MMM dd, yyyy HH:mm")
                            </small>
                        </div>
                    }
                    @if (Model.CompletedAt.HasValue)
                    {
                        <div class="col-md-4">
                            <small class="text-success">
                                <i class="bi bi-check-circle me-1"></i>Completed:<br />
                                @Model.CompletedAt.Value.ToString("MMM dd, yyyy HH:mm")
                            </small>
                        </div>
                    }
                </div>

                <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4">
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left me-2"></i>Back to List
                    </a>
                    @if (Model.Status != TaskManager.DataAccess.Enums.TaskStatus.Completed)
                    {
                        <form asp-action="MarkAsCompleted" asp-route-id="@Model.Id" method="post" class="d-inline">
                            <button type="submit" class="btn btn-success">
                                <i class="bi bi-check-circle me-2"></i>Mark as Completed
                            </button>
                        </form>
                    }
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">
                        <i class="bi bi-pencil me-2"></i>Edit
                    </a>
                    <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">
                        <i class="bi bi-trash me-2"></i>Delete
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
