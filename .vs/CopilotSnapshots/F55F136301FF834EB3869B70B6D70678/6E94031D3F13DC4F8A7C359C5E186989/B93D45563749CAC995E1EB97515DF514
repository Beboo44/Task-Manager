using TaskManager.Business.DTOs;

namespace TaskManager.Business.Services
{
    public interface ICategoryService
    {
        // CRUD Operations
        Task<IEnumerable<CategoryDto>> GetAllCategoriesAsync(string userId);
        Task<CategoryDto?> GetCategoryByIdAsync(int id, string userId);
        Task<CategoryDto> CreateCategoryAsync(CategoryDto categoryDto);
        Task<bool> UpdateCategoryAsync(CategoryDto categoryDto);
        Task<bool> DeleteCategoryAsync(int id, string userId);

        // Special Operations
        Task InitializeDefaultCategoriesAsync(string userId);
        Task<bool> CanDeleteCategoryAsync(int id, string userId);
    }
}
