@model TaskManager.ViewModels.DashboardViewModel

@{
    ViewData["Title"] = "Dashboard";
}

<div class="row mb-4">
    <div class="col-12">
        <h2>
            <i class="bi bi-speedometer2 me-2"></i>Dashboard
        </h2>
        <p class="text-muted">Overview of your tasks and productivity - <strong>@Model.CurrentMonthName</strong></p>
    </div>
</div>

@if (!Model.HasTasks)
{
    <!-- Empty State -->
    <div class="card">
        <div class="card-body text-center py-5">
            <i class="bi bi-clipboard-check text-muted" style="font-size: 4rem;"></i>
            <h4 class="mt-3">No Tasks Yet</h4>
            <p class="text-muted">Create your first task to see your dashboard come to life!</p>
            <a asp-controller="Task" asp-action="Create" class="btn btn-primary mt-3">
                <i class="bi bi-plus-circle me-2"></i>Create Your First Task
            </a>
        </div>
    </div>
}
else
{
    <!-- Statistics Cards -->
    <div class="row mb-4">
        <!-- Total Tasks -->
        <div class="col-md-3 mb-3">
            <div class="card border-primary">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-muted mb-2">This Month</h6>
                            <h2 class="mb-0">@Model.TotalTasks</h2>
                            <small class="text-muted">tasks created</small>
                        </div>
                        <div class="text-primary">
                            <i class="bi bi-list-task" style="font-size: 2.5rem;"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Completed Tasks -->
        <div class="col-md-3 mb-3">
            <div class="card border-success">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-muted mb-2">Completed</h6>
                            <h2 class="mb-0 text-success">@Model.CompletedTasks</h2>
                            <small class="text-success">@Model.CompletionPercentage% this month</small>
                        </div>
                        <div class="text-success">
                            <i class="bi bi-check-circle-fill" style="font-size: 2.5rem;"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- In Progress Tasks -->
        <div class="col-md-3 mb-3">
            <div class="card border-warning">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-muted mb-2">In Progress</h6>
                            <h2 class="mb-0 text-warning">@Model.IncompleteTasks</h2>
                            <small class="text-muted">InProgress & To Do</small>
                        </div>
                        <div class="text-warning">
                            <i class="bi bi-hourglass-split" style="font-size: 2.5rem;"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Overdue Tasks -->
        <div class="col-md-3 mb-3">
            <a asp-controller="Task" asp-action="Overdue" class="text-decoration-none">
                <div class="card border-danger">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="text-muted mb-2">Overdue</h6>
                                <h2 class="mb-0 text-danger">@Model.OverdueTasksCount</h2>
                                @if (Model.OverduePercentage > 0)
                                {
                                    <small class="text-danger">@Model.OverduePercentage% this month</small>
                                }
                                else
                                {
                                    <small class="text-muted">this month</small>
                                }
                            </div>
                            <div class="text-danger">
                                <i class="bi bi-exclamation-triangle-fill" style="font-size: 2.5rem;"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </a>
        </div>
    </div>

    <!-- Charts Row -->
    <div class="row mb-4">
        <!-- Status Distribution -->
        <div class="col-md-6 mb-3">
            <div class="card h-100">
                <div class="card-header bg-white">
                    <h5 class="mb-0">
                        <i class="bi bi-pie-chart me-2"></i>Task Status - This Month
                    </h5>
                </div>
                <div class="card-body">
                    <canvas id="statusChart" height="250"></canvas>
                </div>
            </div>
        </div>

        <!-- Priority Distribution -->
        <div class="col-md-6 mb-3">
            <div class="card h-100">
                <div class="card-header bg-white">
                    <h5 class="mb-0">
                        <i class="bi bi-bar-chart me-2"></i>Task Priority - This Month
                    </h5>
                </div>
                <div class="card-body">
                    <canvas id="priorityChart" height="250"></canvas>
                </div>
            </div>
        </div>
    </div>

    <!-- Performance Chart -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-white">
                    <h5 class="mb-0">
                        <i class="bi bi-activity me-2"></i>Performance & Productivity (Last 7 Days)
                    </h5>
                    <small class="text-muted">Priority-weighted completion score</small>
                </div>
                <div class="card-body">
                    <canvas id="performanceChart" height="100"></canvas>
                </div>
            </div>
        </div>
    </div>

    <!-- Recommended Task -->
    <div class="row mb-4">
        @if (Model.HasRecommendation)
        {
            <div class="col-12">
                <div class="card border-primary">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0">
                            <i class="bi bi-lightbulb me-2"></i>Recommended Task
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-8">
                                <div class="alert alert-info mb-3">
                                    <i class="bi bi-info-circle me-2"></i>@Model.RecommendationReason
                                </div>
                                
                                <h5 class="card-title">@Model.RecommendedTask!.Title</h5>
                                
                                @if (!string.IsNullOrEmpty(Model.RecommendedTask.Description))
                                {
                                    <p class="card-text text-muted">
                                        @(Model.RecommendedTask.Description.Length > 150 
                                            ? Model.RecommendedTask.Description.Substring(0, 150) + "..." 
                                            : Model.RecommendedTask.Description)
                                    </p>
                                }

                                <div class="mb-3">
                                    <span class="@Model.RecommendedTask.PriorityBadgeClass me-2">@Model.RecommendedTask.PriorityText</span>
                                    <span class="@Model.RecommendedTask.StatusBadgeClass me-2">@Model.RecommendedTask.StatusText</span>
                                    <span class="badge bg-light text-dark">
                                        <i class="bi bi-tag me-1"></i>@Model.RecommendedTask.CategoryName
                                    </span>
                                </div>

                                <div class="mb-3">
                                    <small class="text-muted">
                                        <i class="bi bi-calendar-event me-1"></i>
                                        @if (Model.RecommendedTask.IsOverdue)
                                        {
                                            <span class="text-danger fw-bold">Overdue by @Math.Abs(Model.RecommendedTask.DaysUntilDeadline) days</span>
                                        }
                                        else if (Model.RecommendedTask.DaysUntilDeadline == 0)
                                        {
                                            <span class="text-warning fw-bold">Due today</span>
                                        }
                                        else
                                        {
                                            <span>Due in @Model.RecommendedTask.DaysUntilDeadline days</span>
                                        }
                                    </small>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="d-grid gap-2">
                                    <a asp-controller="Task" asp-action="Details" asp-route-id="@Model.RecommendedTask.Id" 
                                       class="btn btn-primary">
                                        <i class="bi bi-eye me-2"></i>View Task
                                    </a>
                                    <form asp-controller="Task" asp-action="MarkAsCompleted" asp-route-id="@Model.RecommendedTask.Id" method="post">
                                        <button type="submit" class="btn btn-success w-100">
                                            <i class="bi bi-check-circle me-2"></i>Mark as Completed
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

    <!-- Upcoming & Overdue Tasks -->
    <div class="row">
        <!-- Upcoming Tasks -->
        <div class="col-md-6 mb-3">
            <div class="card">
                <div class="card-header bg-white">
                    <h5 class="mb-0">
                        <i class="bi bi-calendar-check me-2"></i>Upcoming Tasks
                        <span class="badge bg-primary">@Model.UpcomingTasks.Count</span>
                    </h5>
                </div>
                <div class="card-body" style="max-height: 400px; overflow-y: auto;">
                    @if (Model.UpcomingTasks.Any())
                    {
                        <div class="list-group list-group-flush">
                            @foreach (var task in Model.UpcomingTasks)
                            {
                                <a asp-controller="Task" asp-action="Details" asp-route-id="@task.Id" 
                                   class="list-group-item list-group-item-action">
                                    <div class="d-flex w-100 justify-content-between align-items-start">
                                        <div class="flex-grow-1">
                                            <h6 class="mb-1">@task.Title</h6>
                                            <small class="text-muted">
                                                <i class="bi bi-calendar-event me-1"></i>
                                                @task.Deadline.ToString("MMM dd, yyyy")
                                            </small>
                                        </div>
                                        <span class="@task.PriorityBadgeClass">@task.PriorityText</span>
                                    </div>
                                </a>
                            }
                        </div>
                    }
                    else
                    {
                        <p class="text-muted text-center py-3">No upcoming tasks in the next 7 days</p>
                    }
                </div>
                @if (Model.UpcomingTasks.Any())
                {
                    <div class="card-footer bg-white text-center">
                        <a asp-controller="Task" asp-action="Upcoming" class="text-decoration-none">
                            View All Upcoming <i class="bi bi-arrow-right"></i>
                        </a>
                    </div>
                }
            </div>
        </div>

        <!-- Overdue Tasks -->
        <div class="col-md-6 mb-3">
            <div class="card @(Model.HasOverdueTasks ? "border-danger" : "")">
                <div class="card-header @(Model.HasOverdueTasks ? "bg-danger text-white" : "bg-white")">
                    <h5 class="mb-0">
                        <i class="bi bi-exclamation-triangle me-2"></i>Overdue Tasks
                        @if (Model.HasOverdueTasks)
                        {
                            <span class="badge bg-white text-danger">@Model.OverdueTasks.Count</span>
                        }
                    </h5>
                </div>
                <div class="card-body" style="max-height: 400px; overflow-y: auto;">
                    @if (Model.OverdueTasks.Any())
                    {
                        <div class="list-group list-group-flush">
                            @foreach (var task in Model.OverdueTasks)
                            {
                                <a asp-controller="Task" asp-action="Details" asp-route-id="@task.Id" 
                                   class="list-group-item list-group-item-action list-group-item-danger">
                                    <div class="d-flex w-100 justify-content-between align-items-start">
                                        <div class="flex-grow-1">
                                            <h6 class="mb-1">@task.Title</h6>
                                            <small class="text-danger">
                                                <i class="bi bi-exclamation-triangle me-1"></i>
                                                Overdue by @Math.Abs(task.DaysUntilDeadline) days
                                            </small>
                                        </div>
                                        <span class="@task.PriorityBadgeClass">@task.PriorityText</span>
                                    </div>
                                </a>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-3">
                            <i class="bi bi-check-circle text-success" style="font-size: 3rem;"></i>
                            <p class="text-success mt-2 mb-0">No overdue tasks!</p>
                        </div>
                    }
                </div>
                @if (Model.OverdueTasks.Any())
                {
                    <div class="card-footer bg-white text-center">
                        <a asp-controller="Task" asp-action="Overdue" class="text-decoration-none text-danger">
                            View All Overdue <i class="bi bi-arrow-right"></i>
                        </a>
                    </div>
                }
            </div>
        </div>
    </div>
}

<!-- All-Time Statistics Section -->
@if (Model.AllTimeTotalTasks > 0)
{
    <div class="row mb-4">
        <div class="col-12">
            <div class="card bg-light">
                <div class="card-body">
                    <h5 class="card-title mb-3">
                        <i class="bi bi-graph-up-arrow me-2"></i>All-Time Statistics
                    </h5>
                    <div class="row text-center">
                        <div class="col-md-4 mb-3 mb-md-0">
                            <div class="d-flex flex-column">
                                <span class="text-muted small">Total Tasks Created</span>
                                <h3 class="mb-0 text-primary">@Model.AllTimeTotalTasks</h3>
                                <small class="text-muted">since account creation</small>
                            </div>
                        </div>
                        <div class="col-md-4 mb-3 mb-md-0">
                            <div class="d-flex flex-column">
                                <span class="text-muted small">Tasks Completed</span>
                                <h3 class="mb-0 text-success">@Model.AllTimeCompletedTasks</h3>
                                <small class="text-success">@Model.AllTimeCompletionPercentage% completion rate</small>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="d-flex flex-column">
                                <span class="text-muted small">This Month vs All-Time</span>
                                <h3 class="mb-0">
                                    @if (Model.HasTasks && Model.CompletionPercentage > Model.AllTimeCompletionPercentage)
                                    {
                                        <span class="text-success">
                                            <i class="bi bi-arrow-up-circle-fill"></i>
                                            +@Math.Round(Model.CompletionPercentage - Model.AllTimeCompletionPercentage, 1)%
                                        </span>
                                    }
                                    else if (Model.HasTasks && Model.CompletionPercentage < Model.AllTimeCompletionPercentage)
                                    {
                                        <span class="text-danger">
                                            <i class="bi bi-arrow-down-circle-fill"></i>
                                            @Math.Round(Model.AllTimeCompletionPercentage - Model.CompletionPercentage, 1)%
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">
                                            <i class="bi bi-dash-circle-fill"></i> Equal
                                        </span>
                                    }
                                </h3>
                                <small class="text-muted">completion rate difference</small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.0/dist/chart.umd.min.js"></script>
    <script>
        console.log('Chart.js loaded successfully');
        
        @if (Model.HasTasks)
        {
            <text>
            console.log('Model.HasTasks is true, initializing charts...');
            console.log('WeeklyPerformanceScore:', @Html.Raw(System.Text.Json.JsonSerializer.Serialize(Model.WeeklyPerformanceScore)));
            
            try {
                const statusCtx = document.getElementById('statusChart');
                if (statusCtx) {
                    new Chart(statusCtx, {
                        type: 'doughnut',
                        data: {
                            labels: ['Completed', 'To Do', 'In Progress'],
                            datasets: [{
                                data: [@Model.CompletedTasks, @Model.ToDoTasks, @Model.InProgressTasks],
                                backgroundColor: ['#198754', '#0d6efd', '#ffc107'],
                                borderWidth: 2
                            }]
                        },
                        options: {
                            responsive: true,
                            maintainAspectRatio: false,
                            plugins: { legend: { position: 'bottom' } }
                        }
                    });
                    console.log('Status chart initialized');
                } else {
                    console.error('statusChart canvas not found');
                }
            } catch (error) {
                console.error('Error initializing status chart:', error);
            }

            try {
                const priorityCtx = document.getElementById('priorityChart');
                if (priorityCtx) {
                    new Chart(priorityCtx, {
                        type: 'bar',
                        data: {
                            labels: ['Critical', 'High', 'Medium', 'Low'],
                            datasets: [{
                                label: 'Number of Tasks',
                                data: [@Model.CriticalPriorityTasks, @Model.HighPriorityTasks, @Model.MediumPriorityTasks, @Model.LowPriorityTasks],
                                backgroundColor: ['#dc3545', '#fd7e14', '#0dcaf0', '#6c757d'],
                                borderWidth: 1
                            }]
                        },
                        options: {
                            responsive: true,
                            maintainAspectRatio: false,
                            plugins: { legend: { display: false } },
                            scales: { y: { beginAtZero: true, ticks: { stepSize: 1 } } }
                        }
                    });
                    console.log('Priority chart initialized');
                } else {
                    console.error('priorityChart canvas not found');
                }
            } catch (error) {
                console.error('Error initializing priority chart:', error);
            }

            try {
                const performanceCtx = document.getElementById('performanceChart');
                if (performanceCtx) {
                    new Chart(performanceCtx, {
                        type: 'line',
                        data: {
                            labels: [@Html.Raw(string.Join(",", Model.WeeklyPerformanceScore.Keys.Select(k => $"'{k}'")))]
                            datasets: [{
                                label: 'Performance',
                                data: [@string.Join(",", Model.WeeklyPerformanceScore.Values)],
                                backgroundColor: 'rgba(99, 102, 241, 0.1)',
                                borderColor: '#6366f1',
                                borderWidth: 3,
                                fill: true,
                                tension: 0.4,
                                pointRadius: 5,
                                pointBackgroundColor: '#6366f1',
                                pointBorderColor: '#fff',
                                pointBorderWidth: 2,
                                pointHoverRadius: 7,
                                pointHoverBackgroundColor: '#6366f1',
                                pointHoverBorderColor: '#fff',
                                pointHoverBorderWidth: 3
                            }]
                        },
                        options: {
                            responsive: true,
                            maintainAspectRatio: false,
                            plugins: {
                                legend: { display: false },
                                tooltip: {
                                    enabled: true,
                                    mode: 'index',
                                    intersect: false,
                                    backgroundColor: 'rgba(0, 0, 0, 0.8)',
                                    titleColor: '#fff',
                                    bodyColor: '#fff',
                                    borderColor: '#6366f1',
                                    borderWidth: 1,
                                    padding: 12,
                                    displayColors: false,
                                    callbacks: {
                                        label: function(context) {
                                            return 'Performance Score: ' + context.parsed.y.toFixed(1);
                                        }
                                    }
                                }
                            },
                            scales: {
                                x: {
                                    grid: { display: false },
                                    ticks: {
                                        font: { size: 12, weight: 'bold' },
                                        color: '#6b7280'
                                    }
                                },
                                y: {
                                    display: false,
                                    beginAtZero: true,
                                    grid: { display: false }
                                }
                            },
                            interaction: {
                                mode: 'nearest',
                                axis: 'x',
                                intersect: false
                            }
                        }
                    });
                    console.log('Performance chart initialized');
                } else {
                    console.error('performanceChart canvas not found');
                }
            } catch (error) {
                console.error('Error initializing performance chart:', error);
            }
            </text>
        }
        else
        {
            <text>
            console.log('Model.HasTasks is false - charts will not render');
            </text>
        }
    </script>
}
